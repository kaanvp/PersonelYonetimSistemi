@model PersonelYonetimSistemi.Models.Personel
@{
    ViewData["Title"] = "Yeni Personel Ekle";
}

<h1>Yeni Personel Ekle</h1>

<form asp-action="Create" enctype="multipart/form-data">
    <div class="form-group">
        <label for="EmpNum">Personel Numarası</label>
        <input type="text" class="form-control" id="EmpNum" name="EmpNum" required />
    </div>
    <div class="form-group">
        <label for="FirstName">Ad</label>
        <input type="text" class="form-control" id="FirstName" name="FirstName" required />
    </div>
    <div class="form-group">
        <label for="MidName">İkinci Ad</label>
        <input type="text" class="form-control" id="MidName" name="MidName" />
    </div>
    <div class="form-group">
        <label for="LastName">Soyad</label>
        <input type="text" class="form-control" id="LastName" name="LastName" required />
    </div>
    <div class="form-group">
        <label for="TCKN">TCKN</label>
        <input type="text" class="form-control" id="TCKN" name="TCKN" required />
    </div>
    <div class="form-group">
        <label for="City">Şehir</label>
        <input type="text" class="form-control" id="City" name="City" required />
    </div>
    <div class="form-group">
        <label for="DateofBirth">Doğum Tarihi</label>
        <input type="date" class="form-control" id="DateofBirth" name="DateofBirth" required />
    </div>
    <div class="form-group">
        <label asp-for="Gender" class="control-label">Cinsiyet</label>
        <select asp-for="Gender" class="form-control">
            <option value="Erkek">Erkek</option>
            <option value="Kadın">Kadın</option>
        </select>
    </div>
    <div class="form-group">
        <label asp-for="MaritalStatus" class="control-label">Medeni Hal</label>
        <select asp-for="MaritalStatus" class="form-control">
            <option value="Bekar">Bekar</option>
            <option value="Evli">Evli</option>
        </select>
    </div>
    <div class="form-group">
        <label for="PhoneNumber">Telefon Numarası</label>
        <input type="text" class="form-control" id="PhoneNumber" name="PhoneNumber" required />
    </div>
    <div class="form-group">
        <label for="EmailAddress">Email</label>
        <input type="email" class="form-control" id="EmailAddress" name="EmailAddress" required />
    </div>
    <div class="form-group">
        <label for="Address">Adres</label>
        <textarea class="form-control" id="Address" name="Address" required></textarea>
    </div>
    <div class="form-group">
        <label for="BankName">Banka Adı</label>
        <input type="text" class="form-control" id="BankName" name="BankName" required />
    </div>
    <div class="form-group">
        <label for="IBAN">IBAN</label>
        <input type="text" class="form-control" id="IBAN" name="IBAN" required />
    </div>
    <div class="form-group">
        <label for="Salary">Maaş</label>
        <input type="text" class="form-control" id="Salary" name="Salary" required />
    </div>
    <div class="form-group">
        <label for="HireDate">İşe Giriş Tarihi</label>
        <input type="date" class="form-control" id="HireDate" name="HireDate" required />
    </div>
    <div class="form-group">
        <label for="DepartmanId">Departman</label>
        <select class="form-control" id="DepartmanId" name="DepartmanId">
            @if (ViewBag.Departmanlar != null)
            {
                foreach (var departman in ViewBag.Departmanlar)
                {
                    <option value="@departman.Id">@departman.Name</option>
                }
            }
            else
            {
                <option disabled>Departman bilgisi bulunamadı</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label for="PozisyonId">Pozisyon</label>
        <select class="form-control" id="PozisyonId" name="PozisyonId">
            @if (ViewBag.Pozisyonlar != null)
            {
                foreach (var pozisyon in ViewBag.Pozisyonlar)
                {
                    <option value="@pozisyon.Id">@pozisyon.Name</option>
                }
            }
            else
            {
                <option disabled>Pozisyon bilgisi bulunamadı</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label for="CvFile">CV Yükle (PDF/Word, max 5MB):</label>
        <input type="file" name="CvFile" class="form-control" accept=".pdf,.doc,.docx" />
        <small class="form-text text-muted">Yalnızca PDF veya Word dosyaları kabul edilir.</small>
    </div>
    <div class="form-group">
        <label for="ContractFile">Sözleşme Yükle (PDF, max 5MB):</label>
        <input type="file" name="ContractFile" class="form-control" accept=".pdf" />
        <small class="form-text text-muted">Yalnızca PDF dosyaları kabul edilir.</small>
    </div>
    <button type="submit" class="btn btn-primary">Kaydet</button>
    <a asp-action="Index" class="btn btn-secondary btn-lg ml-2">
        <i class="fas fa-arrow-left"></i> Listeye Dön
    </a>
</form>

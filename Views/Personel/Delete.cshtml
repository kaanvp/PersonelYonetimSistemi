@model PersonelYonetimSistemi.Models.Personel
@{
    ViewData["Title"] = "Personel Sil";
}

<h1>Personel Sil</h1>

<div>
    <h4>Personel</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Personel Numarası
        </dt>
        <dd class="col-sm-10">
            @Model.EmpNum
        </dd>
        <dt class="col-sm-2">
            Ad
        </dt>
        <dd class="col-sm-10">
            @Model.FirstName
        </dd>
        <dt class="col-sm-2">
            İkinci Ad
        </dt>
        <dd class="col-sm-10">
            @Model.MidName
        </dd>
        <dt class="col-sm-2">
            Soyad
        </dt>
        <dd class="col-sm-10">
            @Model.LastName
        </dd>
        <dt class="col-sm-2">
            Telefon Numarası
        </dt>
        <dd class="col-sm-10">
            @Model.PhoneNumber
        </dd>
        

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Sil</button> |
        <a asp-action="Index" class="btn btn-secondary">Geri Dön</a>
    </form>
</div>

@model PersonelYonetimSistemi.Models.Pozisyon
@{
    ViewData["Title"] = "Pozisyon Düzenle";
}

<h1>Pozisyon Düzenle</h1>

<form asp-action="Edit">
    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="SalaryRange" class="control-label"></label>
        <input asp-for="SalaryRange" class="form-control" />
        <span asp-validation-for="SalaryRange" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="JobDescription" class="control-label"></label>
        <input asp-for="JobDescription" class="form-control" />
        <span asp-validation-for="JobDescription" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="RequiredSkills" class="control-label"></label>
        <input asp-for="RequiredSkills" class="form-control" />
        <span asp-validation-for="RequiredSkills" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="IsActive" class="control-label"></label>
        <input asp-for="IsActive" class="form-control" />
        <span asp-validation-for="IsActive" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Kaydet" class="btn btn-primary" />
    </div>
</form>

<div>
    <a asp-action="Index">Geri Dön</a>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}